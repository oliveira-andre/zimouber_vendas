<div class="container">
  <section class="section">
    <div class="columns is-multiline is-mobile">
      <% if @ads.empty? %>
        <div class="column is-12 has-text-centered">
          <%= link_to t('form.advertisement.empty'), new_advertisement_path, class:"is-size-4 has-text-grey" %>
        </div>
      <% else %>
        <div class="column is-9">
          <h2 class="is-size-4 has-text-grey"><%= t('form.advertisement.title') %></h2>
        </div>
        <div class="column is-3">
          <%= link_to t('form.advertisement.add'), new_advertisement_path, class: 'button is-primary is-outlined is-pulled-right' %>
        </div>
      <% end %>
    </div>
  </section>
</div>
