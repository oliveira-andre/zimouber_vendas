<div class="container">
  <section class="section">
    <div class="columns is-multiline">
      <%= form_with model: @ad do |f| %>
        <div class="column is-12">
          <div class="field">
            <div class="control">
              <figure class="image is-128x128 is-pulled-center">
                <%= f.file_field :image, class:"file-input", accept: "image/x-png,image/jpeg"%>
                <div id="preview">
                  <%= image_tag @ad.load_image %>
                </div>
              </figure>
            </div>
          </div>
        </div>
        <div class="column is-12">
          <div class="field">
            <div class="control">
              <%= f.label :heading, t('form.advertisement.heading'), class: :label %>
              <%= f.text_field :heading, class: :input, required: true, placeholder: t('form.advertisement.placeholder.heading') %>
            </div>
          </div>
        </div>
        <div class="column is-12">
          <div class="field">
            <%= f.label :value, t('form.advertisement.value'), class: :label %>
            <div class="control has-icons-left">
              <%= f.text_field :value, class: 'input money', required: true, placeholder: t('form.advertisement.placeholder.value'), value: @ad.new_record? ? '' : mask_money(@ad.value) %>
              <span class="icon is-small is-left has-text-weight-bold">
                <%= t('brazilian_real') %>
              </span>
            </div>
          </div>
        </div>
        <div class="column is-12">
          <div class="control">
            <div class="field">
              <%= f.label :description, t('form.advertisement.description'), class: :label %>
              <%= f.text_area :description, class: :textarea, placeholder: t('form.advertisement.placeholder.description') %>
            </div>
          </div>
        </div>
        <div class="column is-12">
          <div class="actions">
            <%= f.submit t('save'), class: 'button is-primary is-pulled-right'%>
          </div>
        </div>
      <% end %>
    </div>
  </section>
</div>
