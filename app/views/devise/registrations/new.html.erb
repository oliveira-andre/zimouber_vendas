<div class="container">
  <section class="section">
    <div class="columns">
      <div class="column is-12">
        <h2 class="is-size-3 has-text-weight-bold has-text-centered">
          <%= t('form.establishment.title') %>
        </h2>
      </div>
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>
        <div class="column is-12">
          <div class="field">
            <div class="control">
              <%= f.label :trading_name, class: :label %>
              <%= f.text_field :trading_name, class: :input, required: true, placeholder: t('form.establishment.placeholder.trading_name') %>
            </div>
          </div>
        </div>
        <div class="column is-12">
          <div class="field">
            <div class="control">
              <%= f.label :email, class: :label %>
              <%= f.email_field :email, autocomplete: "email", class: :input, required: true, placeholder: t('form.establishment.placeholder.email') %>
            </div>
          </div>
        </div>
        <div class="column is-12">
          <div class="field">
            <div class="control">
              <%= f.label :password, t('form.establishment.password'), class: :label %>
              <%= f.password_field :password, class: :input, required: true, placeholder: t('form.establishment.placeholder.password') %>
            </div>
          </div>
        </div>
        <div class="column is-12">
          <div class="field">
            <div class="control">
              <%= f.label :password_confirmation, t('form.establishment.password_confirmation'), class: :label %>
              <%= f.password_field :password_confirmation, class: :input, required: true, placeholder: t('form.establishment.placeholder.password_confirmation') %>
            </div>
          </div>
        </div>
        <div class="actions">
        <div class="column is-12 has-text-centered">
          <%= f.submit t('form.establishment.sign_up.submit'), class: 'button is-primary' %>
        </div>
        <div class="column is-12 has-text-centered">
          <%= render "devise/shared/links" %>
        </div>
      </div>
      <% end %>
    </div>
  </section>
</div>
